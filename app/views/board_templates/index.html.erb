<nav aria-label="breadcrumb">
  <ul>
    <li><a href="/">Home</a></li>
  </ul>
</nav>

<% list_of_boards = Board.all %>

<article>
  <header>
    All boards
  </header>
  <ul>
    <% list_of_boards.each do |a_board| %>
      <li>
        <a href="/boards/<%= a_board.id %>">
          <%= a_board.name %>
        </a>
      </li>
    <% end %>
  </ul>
</article>

<article>
  <header>Add a new board</header>

  <form action="/insert_board" method="post">
    <label for="name_field">Name</label>
    <input id="name_field" type="text" name="name_param" placeholder="Enter a name for your board...">

    <button>Create board</button>
  </form>
</article>
